{
  "name": "e2e-tests",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "format:check": "prettier --check --cache \"./**/*.{js,ts,json}\" .",
    "format": "prettier --write --cache \"./**/*.{js,ts,json}\" ."
  },
  "dependencies": {
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "~25.2.2",
    "eslint-plugin-playwright": "~2.5.1"
  }
}
