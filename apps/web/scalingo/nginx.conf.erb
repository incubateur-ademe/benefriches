location / {
  root /app/dist;
  add_header Content-Security-Policy default-src 'self'; connect-src 'self' https://api-adresse.data.gouv.fr/search/; font-src 'self'; img-src 'self' data: https://a.tile.openstreetmap.org https://b.tile.openstreetmap.org https://c.tile.openstreetmap.org;
  add_header X-Content-Type-Options "nosniff";
  try_files $uri $uri/ /index.html =404;
}

location /api {
  proxy_pass <%= ENV['API_HOST_URL'] %>;
  real_ip_header X-Forwarded-For;
  proxy_buffer_size 16k;  
  proxy_busy_buffers_size 16k;
}
